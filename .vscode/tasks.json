{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PlatformIO: Build",
			"type": "shell",
			"command": "pio",
			"args": [
				"run"
			],
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		},
		{
			"label": "PlatformIO: Upload Filesystem Image",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--target",
				"uploadfs"
			],
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		}
	]
}